<UserControl x:Class="HornetEditor.Controls.FileTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HornetEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="128" 
             MouseEnter="UserControl_MouseEnter" 
             MouseLeave="UserControl_MouseLeave" 
             MouseDoubleClick="UserControl_MouseDoubleClick">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="112*"></RowDefinition>
            <RowDefinition Height="16*"></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Grid.Column="0"  Fill="Green" Margin="16, 8, 16, 8"/>
        <Viewbox Grid.Row="1">
            <Label  x:Name="Filename" Foreground="White" HorizontalContentAlignment="Center" Content="Helloworld"/>
        </Viewbox>
    </Grid>
</UserControl>
