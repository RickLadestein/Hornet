<Window x:Class="HornetEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HornetEditor"
        xmlns:views="clr-namespace:HornetEditor.Views"
        mc:Ignorable="d"
        Title="Hornet Editor" 
        Height="1080" 
        Width="1920">

    <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Menu Grid.RowSpan="1" Grid.ColumnSpan="3" DockPanel.Dock="Top">
            <MenuItem Header="Project"></MenuItem>
        </Menu>

        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <views:FolderControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="fc"></views:FolderControl>

        </Grid>
    </DockPanel>
    
</Window>
